<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenSctivity">

    <ImageView
        android:id="@+id/splash_screen_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash_screen_mage"
        android:tintMode="src_over"
        app:tint="#A3000000"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-28dp" />

    <ImageView
        android:id="@+id/alfrescologo"
        android:layout_width="430dp"
        android:layout_height="429dp"
        android:foregroundGravity="center"
        android:src="@drawable/alfrescologo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alfrescologo"
        android:fontFamily="@font/edo"
        android:gravity="center"
        android:text="Alfresco E-Entry"
        android:textColor="#52FFF5"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/splash_screen_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alfrescologo" />


</androidx.constraintlayout.widget.ConstraintLayout>